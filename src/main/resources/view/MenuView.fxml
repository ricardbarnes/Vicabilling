            <MenuItem fx:id="itemSave" mnemonicParsing="false" onAction="#onItemSaveAction" text="%Save"/>
        </Menu>
        <Menu fx:id="editMenu" mnemonicParsing="false" text="%Edit">
            <MenuItem fx:id="itemSettings" mnemonicParsing="false" onAction="#onItemSettingsAction" text="%Settings"/>
        </Menu>
        <Menu fx:id="menuBill" mnemonicParsing="false" text="%PDF">
            <MenuItem fx:id="itemBuildPDF" mnemonicParsing="false" onAction="#onItemBuildPDFAction" text="%Build"/>
            <!--            <SeparatorMenuItem fx:id="firstPDFSeparator" mnemonicParsing="false"/>-->
