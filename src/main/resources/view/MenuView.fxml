        <!--                <MenuItem mnemonicParsing="false" text="%English_US" onAction="#onEnglishUSAction"/>-->
        <!--                <MenuItem mnemonicParsing="false" text="%Catalan" onAction="#onCatalanAction"/>-->
        <!--            </items>-->
        <!--        </Menu>-->
        <Menu fx:id="tableMenu" mnemonicParsing="false" text="%Table">
            <MenuItem fx:id="itemSelectAll" mnemonicParsing="false" onAction="#onItemSelectAllAction"
                      text="%Select_all"/>
            <SeparatorMenuItem fx:id="firstTableSeparator" mnemonicParsing="false"/>
            <MenuItem fx:id="itemApplyPercentage" mnemonicParsing="false" onAction="#onItemApplyPercentageAction"
                      text="%Apply_percentage"/>
            <MenuItem fx:id="itemDeleteSelected" mnemonicParsing="false" onAction="#onItemDeleteSelectedAction"
                      text="%Delete_selected"/>
        </Menu>
        <Menu fx:id="menuHelp" mnemonicParsing="false" text="%Help">
            <MenuItem fx:id="itemAbout" mnemonicParsing="false" onAction="#onItemAboutAction" text="%About"/>
        </Menu>
    </MenuBar>
</fx:root>
